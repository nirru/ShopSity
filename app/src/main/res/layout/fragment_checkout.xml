<com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

    </android.support.v7.widget.Toolbar>
    <!-- Login progress -->
    <ProgressBar
        android:layout_below="@+id/toolbar"
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/login_form">


    <RelativeLayout
       android:id="@+id/rel_1"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:paddingLeft="@dimen/activity_horizontal_margin"
       android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/l1"
        style="@style/preLinear"
        android:weightSum="9">
        <LinearLayout
            style="@style/horLinear"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_weight="3">



            <com.oxilo.shopsity.ui.CustomTextView
                android:id="@+id/campaign"
                style="@style/msgtextbold"
                android:text="5230"/>

            <com.oxilo.shopsity.ui.CustomTextView
                style="@style/msgtextlight"
                android:text="Order ID"/>
        </LinearLayout>
        <LinearLayout
            style="@style/horLinear"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_weight="3">

            <com.oxilo.shopsity.ui.CustomTextView
                android:id="@+id/order_id"
                style="@style/msgtextbold"
                android:text="6200"/>

            <com.oxilo.shopsity.ui.CustomTextView
                style="@style/msgtextlight"
                android:text="ORDER"/>
        </LinearLayout>
        <LinearLayout
            style="@style/horLinear"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="3">

            <com.oxilo.shopsity.ui.CustomTextView
                android:id="@+id/invioce_id"
                style="@style/msgtextbold"
                android:text="1190"/>

            <com.oxilo.shopsity.ui.CustomTextView
                style="@style/msgtextlight"
                android:text="INVOICE ID"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        style="@style/preLinear"
        android:weightSum="9"
        android:layout_below="@+id/l1">
        <LinearLayout
            style="@style/horLinear"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_weight="3">

            <com.oxilo.shopsity.ui.CustomTextView
                android:id="@+id/start_date"
                style="@style/msgtextbold"
                android:text="Oct,12,2015"/>

            <com.oxilo.shopsity.ui.CustomTextView
                style="@style/msgtextlight"
                android:text="CREATE DT"/>
        </LinearLayout>
        <LinearLayout
            style="@style/horLinear"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="3">

            <com.oxilo.shopsity.ui.CustomTextView
                android:id="@+id/plan"
                style="@style/msgtextbold"
                android:text="5000 AD VIEWS"/>

            <com.oxilo.shopsity.ui.CustomTextView
                style="@style/msgtextlight"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:text="PLAN"/>
        </LinearLayout>
        <LinearLayout
            style="@style/horLinear"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:layout_weight="3">

            <com.oxilo.shopsity.ui.CustomTextView
                android:id="@+id/inr"
                style="@style/msgtextbold"
                android:text="0"/>

            <com.oxilo.shopsity.ui.CustomTextView
                style="@style/msgtextlight"
                android:text="INR"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearmsg1"
        android:layout_below="@+id/l2"
        style="@style/welLinear"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/la"
            style="@style/welLinear">

            <com.oxilo.shopsity.ui.CustomTextView
                style="@style/check_txt"
                android:text="@string/cout1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_below="@+id/l2"
            style="@style/welLinear"
            android:layout_marginTop="5dp">

            <com.oxilo.shopsity.ui.CustomTextView
                style="@style/check_txt"
                android:text="@string/cout2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_below="@+id/l3"
            style="@style/preLinear">

            <com.oxilo.shopsity.ui.CustomTextView
                style="@style/check_txt"
                android:text="@string/cout3"/>

            <com.oxilo.shopsity.ui.CustomTextView
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                style="@style/check_txt"
                android:autoLink="all"
                android:text="Terms of Use"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l5"
            style="@style/welLinear"
            android:layout_marginTop="5dp"
            android:layout_above="@+id/l6">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/email_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_check_out"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l6"
            android:layout_below="@+id/l5"
            style="@style/welLinear"
            android:layout_marginTop="5dp">
            <TextView
                style="@style/check_txt"
                android:text="@string/cout4"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l7"
        style="@style/welLinear"
        android:layout_below="@+id/linearmsg1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/paytm"
            android:layout_height="50dp"
            android:layout_width="75dp"
            android:scaleType="centerInside"
            android:src="@drawable/paytm_logo"/>

        <ImageView
            android:id="@+id/visacard"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"
            android:src="@drawable/mastercard_logo"/>
        <ImageView
            android:id="@+id/mastercard"
            android:layout_marginLeft="20dp"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:scaleType="centerInside"
            android:src="@drawable/visa_logo"/>
    </LinearLayout>

</RelativeLayout>
    </LinearLayout>
</com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout>
