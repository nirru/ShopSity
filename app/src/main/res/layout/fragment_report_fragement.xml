<com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Login progress -->
    <ProgressBar
        android:layout_below="@+id/toolbar"
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <RelativeLayout
                android:id="@+id/RelativeI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:id="@+id/campaign_action_view"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"
                        android:text="11200"
                        android:layout_gravity="left"/>
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/campaign_id"
                        android:layout_gravity="left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:id="@+id/action_report_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11200"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center"/>
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_gravity="center"
                        android:text="@string/order_id" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:id="@+id/action_plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11200"
                        android:textColor="@android:color/black"
                        android:layout_gravity="right"/>
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="right"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/plan" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeII"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/RelativeI"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:id="@+id/action_create_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11200"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"/>
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/create_date"
                        android:layout_gravity="left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    android:layout_centerInParent="true">
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11200"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center"/>
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/darker_gray"
                        android:text="CompaignId" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:id="@+id/sataus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/compilance"
                        android:textColor="@android:color/black"
                        android:layout_gravity="right"/>
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="right"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/status" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeIII"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/RelativeII"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/left_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/left_linear">
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:id="@+id/camp_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:text="Promotion Preview"
                        android:textColor="@android:color/black"
                        android:layout_gravity="top"/>
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:id="@+id/campaign_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textSize="12sp"
                        android:singleLine="false"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:text="Promotion Preview" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeIV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/RelativeIII"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/facebook_btn"
                        android:layout_width="wrap_content"
                        android:src="@drawable/facebook_img"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/RelativeIV"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:id="@+id/action_total_ads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="11200"
                        android:layout_gravity="left"/>
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/total_ad"
                        android:textColor="@android:color/darker_gray"
                        android:layout_gravity="left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:id="@+id/action_total_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="11200"
                        android:layout_gravity="center"/>
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_gravity="center"
                        android:text="@string/total_views" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:id="@+id/action_click"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"
                        android:text="11200"
                        android:layout_gravity="right"/>
                    <com.oxilo.shopsity.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="right"
                        android:text="@string/clicks" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeVI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/RelativeV"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/action_Impression"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Impressions and Click Graphs"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeVII"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/RelativeVI"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/action_Location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Location Heat Map"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal" />

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>


</com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout>