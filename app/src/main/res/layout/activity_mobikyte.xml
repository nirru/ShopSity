<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oxilo.shopsity.activity.Mobikyte">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash"
        android:scaleType="fitXY"/>


    <TextView
        android:id="@+id/learn_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Learn More"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_above="@+id/get_started"
        android:background="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Get Started"
        android:layout_above="@+id/already_registered"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="12dp"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/already_registered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Already registered Sign in"
        android:layout_above="@+id/bottom_line"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="12dp"
        android:background="@color/colorPrimaryDark"/>


    <TextView
        android:id="@+id/bottom_line"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:gravity="right|center"/>
    <TextView
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powered by"
        android:drawableRight="@drawable/mobikyte_powered"
        android:padding="5dp"
        android:textStyle="italic"
        android:gravity="right|center"
        android:textColor="@android:color/black"/>
</RelativeLayout>
