<com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:background="@color/colorPrimary"-->
        <!--android:minHeight="?attr/actionBarSize"-->
        <!--app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
        <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >-->

    <!--</android.support.v7.widget.Toolbar>-->
    <TextView
        android:layout_below="@+id/toolbar"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/login_progress"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@id/login_form">

        <com.oxilo.shopsity.ui.CustomTextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceSmall"
            android:textSize="@dimen/thanks_info_text"
            android:text="@string/Pfail_msg"/>

        <com.oxilo.shopsity.ui.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="@dimen/root_parent_top"
            android:textSize="@dimen/thanks_cam_info"
            android:paddingTop="@dimen/parent_padding_top"
            android:text="@string/Pfail1"/>

        <com.oxilo.shopsity.ui.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="@dimen/parent_padding_top"
            android:textSize="@dimen/thanks_cam_info"
            android:text="@string/Pfail2"/>

        <com.oxilo.shopsity.ui.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="@dimen/parent_padding_top"
            android:paddingBottom="@dimen/parent_padding_bottom"
            android:textSize="@dimen/thanks_cam_info"
            android:text="@string/Pfail3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="@dimen/parent_padding_top"
            android:paddingBottom="@dimen/parent_padding_bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true">

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="left"
                    android:text="1190"
                    android:textColor="@android:color/black"
                    android:textAllCaps="true"
                    android:id="@+id/campaign_action_view"/>

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/campaign_id"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/text_inner_content_top_margin"
                    android:textSize="@dimen/thanks_cam_info"
                    android:layout_gravity="left"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1190"
                    android:textColor="@android:color/black"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:id="@+id/action_order_view"/>

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/order_id"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/text_inner_content_top_margin"
                    android:textSize="@dimen/thanks_cam_info"
                    android:textAllCaps="true"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:layout_gravity="right"
                    android:text="1190"
                    android:id="@+id/action_ad_view"/>

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Ad_Budget"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/text_inner_content_top_margin"
                    android:textSize="@dimen/thanks_cam_info"
                    android:layout_gravity="right"
                    android:gravity="center"/>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/parent_padding_top"
            android:paddingBottom="@dimen/parent_padding_bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true">

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_gravity="left"
                    android:textAllCaps="true"
                    android:text="1190"
                    android:id="@+id/campaign_start_from"/>

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_from"
                    android:layout_gravity="left"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/text_inner_content_top_margin"
                    android:textSize="@dimen/thanks_cam_info"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:text="1190"
                    android:id="@+id/action_compilance"/>

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/text_inner_content_top_margin"
                    android:textSize="@dimen/thanks_cam_info"
                    android:text="@string/status"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:textColor="@android:color/black"
                    android:textAllCaps="true"
                    android:text="1190"
                    android:id="@+id/action_inr"/>

                <com.oxilo.shopsity.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inr"
                    android:layout_gravity="right"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/text_inner_content_top_margin"
                    android:textAllCaps="true"
                    android:textSize="@dimen/thanks_cam_info"
                    android:gravity="center"/>

            </LinearLayout>


        </RelativeLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/email_sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/action_retry_checkout"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

</com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout>
